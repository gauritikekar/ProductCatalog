{
  "name": "products-api",
  "version": "1.0.0",
  "description": "Products API accessing products information",
  "main": "index.js",
  "scripts": {
    "build": "tsc --build",
    "start": "ts-node-dev src/server.ts",
    "test": "NODE_ENV=test jest",
    "test:watch": "npm run test -- --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gauritikekar/ProductCatalog.git"
  },
  "author": "Gauri Tikekar",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gauritikekar/ProductCatalog/issues"
  },
  "homepage": "https://github.com/gauritikekar/ProductCatalog#readme",
  "dependencies": {
    "@hapi/boom": "^9.1.4",
    "csv-parser": "^3.0.0",
    "http-status-codes": "^2.2.0",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-logger": "^3.2.1",
    "koa-router": "^10.1.1",
    "koa2-cors": "^2.0.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "@shopify/jest-koa-mocks": "^3.1.3",
    "@types/jest": "^27.4.0",
    "@types/koa": "^2.13.4",
    "@types/koa-bodyparser": "^4.3.5",
    "@types/koa-logger": "^3.1.2",
    "@types/koa-router": "^7.4.4",
    "@types/koa2-cors": "^2.0.2",
    "@types/node": "^17.0.15",
    "jest": "^27.4.7",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "roots": [
      "<rootDir>"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "(//.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
